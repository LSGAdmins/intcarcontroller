<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="1">
            android:color="@color:orange"
    <TableRow>
        <TextView
            android:id="@+id/orient_x_label"
            android:layout_column="1"
            android:text="@string/azimuth"
            android:textSize="8pt"
            android:padding="3dip"
            android:textColor="@color/darkgreen" />
        <TextView
            android:id="@+id/orient_x_value"
            android:gravity="right"
            android:textSize="8pt"
            android:padding="3dip"
            android:textColor="@color/darkgreen" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/orient_y_label"
            android:layout_column="1"
            android:text="@string/pitch"
            android:textSize="8pt"
            android:padding="3dip"
            android:textColor="@color/lightgreen" />
        <TextView
            android:id="@+id/orient_y_value"
            android:gravity="right"
            android:textSize="8pt"
            android:padding="3dip"
            android:textColor="@color/lightgreen" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/orient_z_label"
            android:layout_column="1"
            android:text="@string/roll"
            android:textSize="8pt"
            android:padding="3dip"
            android:textColor="@color/lightgreen" />
        <TextView
            android:id="@+id/orient_z_value"
            android:gravity="right"
            android:textSize="8pt"
            android:padding="3dip"
            android:textColor="@color/lightgreen" />
    </TableRow>
    <View
        android:layout_height="2dip"
        android:layout_marginTop="10dp"
        android:background="@color/darkorange" />
 <TableRow>
        <TextView
            android:id="@+id/car_label"
            android:layout_column="1"
            android:textSize="9pt"
            android:padding="3dip"
            android:textColor="@color/darkblue" />
    </TableRow>
   
    <TableRow>
        <TextView
            android:id="@+id/speed_label"
            android:layout_column="1"
            android:text="@string/speed"
            android:textSize="8pt"
            android:padding="3dip"
            android:textColor="@color/lightblue" />
        <TextView
            android:id="@+id/speed_value"
            android:gravity="right"
            android:textSize="8pt"
            android:padding="3dip"
            android:textColor="@color/lightblue" />
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/steering_label"
            android:layout_column="1"
            android:text="@string/steering"
            android:textSize="8pt"
            android:padding="3dip"
            android:textColor="@color/lightblue" />
        <TextView
            android:id="@+id/steering_value"
            android:gravity="right"
            android:textSize="8pt"
            android:padding="3dip"
            android:textColor="@color/lightblue" />
    </TableRow>
    <View
        android:layout_height="2dip"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/lightred" />
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <ToggleButton android:id="@+id/device_control"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textOn="@string/controlON"
                android:layout_weight="1"
                android:textOff="@string/controlOFF"/>
            <ToggleButton android:id="@+id/screen_lock_control"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textOn="@string/screen_alwaysON"
                android:layout_weight="1"
                android:textOff="@string/screen_goOFF"/>
    </LinearLayout>   
            <Button
                android:id="@+id/change_mode"
                android:layout_width="fill_parent"
                android:text="@string/change_mode"
                android:onClick="change_mode"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
</TableLayout>